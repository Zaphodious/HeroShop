<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainGameView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Battle!"
        android:id="@+id/TitleCaption"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Hero Info"
        android:id="@+id/heroInfo"
        android:layout_below="@+id/makeHeroButton"
        android:layout_alignLeft="@+id/makeHeroButton"
        android:layout_alignStart="@+id/makeHeroButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Combat"
        android:id="@+id/attackButton"
        android:onClick="combatRound"
        android:layout_below="@+id/TitleCaption"
        android:layout_toRightOf="@+id/TitleCaption"
        android:layout_toEndOf="@+id/TitleCaption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Enemy Info"
        android:id="@+id/enemyInfo"
        android:layout_below="@+id/attackButton"
        android:layout_toRightOf="@+id/TitleCaption"
        android:layout_toEndOf="@+id/TitleCaption" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make New Heroes"
        android:id="@+id/makeHeroButton"
        android:onClick="makeRandomHero"
        android:layout_below="@+id/TitleCaption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
